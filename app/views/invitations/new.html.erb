<h1 class="horizontal">New invitation</h1>

<%= form_for(@invitation) do |f| %>
  <%= render :partial => "partials/errors", :locals => {:target => @invitation}  %>

  <div class="field">
    <%= f.label :party_id %><br />
    <%= f.collection_select(:party_id ,@parties,:id, :name,{:prompt =>"Select Party"})%>
  </div>
  <div class="field">
    <%= f.label :guest_id %><br />
    <%= f.collection_select(:guest_id ,@guests,:id, :name,{:prompt =>"Select Guest"})%>
  </div>
  <div class="field">
    <%= f.label :expected_attendees %><br />
    <%= f.text_field :expected_attendees %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', invitations_path %>
