<% if @invitations.length > 0 %>
	<h1 class="horizontal">Your Guest Invitations</h1>

	<table class="minimal">
	  <tr>
		<th>Party</th>
		<th>Guest</th>
		<th># Expected</th>
		<th># Confirmed</th>
		<th colspan="3">Actions</th>
	  </tr>

	<% @invitations.each do |invitation| %>
	  <tr>
		<td><%= invitation.party.name %></td>
		<td><%= invitation.guest.name %></td>
		<td><%= invitation.expected_attendees %></td>
		<td><%= invitation.actual_attendees %></td>
		<td><%= link_to 'Show', invitation %></td>
		<td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
		<td><%= link_to 'Destroy', invitation, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
<% else %>
	<h2 class="horizontal">No Invitations to display</h2>
	<p>You have no invitations to display. Get started by creating a party and some guests and invite them to the party!</p>
<% end %>

<div class="link_actions">
<%= link_to 'New Invitation', new_invitation_path %>
</div>