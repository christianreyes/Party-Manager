<% title "Location" %>

<p>
  <strong>Id:</strong>
  <%= @location.id %>
</p>
<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>
<p>
  <strong>Street:</strong>
  <%= @location.street %>
</p>
<p>
  <strong>City:</strong>
  <%= @location.city %>
</p>
<p>
  <strong>State:</strong>
  <%= @location.state %>
</p>
<p>
  <strong>Zip:</strong>
  <%= @location.zip %>
</p>
<p>
  <strong>Latitude:</strong>
  <%= @location.latitude.to_s %>
</p>
<p>
  <strong>Longitude:</strong>
  <%= @location.longitude.to_s[0..5] %>
</p>
<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<p>
  <%= link_to "Edit", edit_location_path(@location) %> |
  <%= link_to "Destroy", @location, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", locations_path %>
</p>
