<% if @locations.length > 0 %>
	<h1 class="horizontal">Your Locations</h1>

	<table class="minimal">
	  <tr>
		<th>Name</th>
		<th>Address</th>
		<th colspan="3">Actions</th>
	  </tr>

	<% @locations.each do |location| %>
	  <tr>
		<td><%= location.name %></td>
		<td><%= location.address %></td>
		<td><%= link_to 'Show', location %></td>
		<td><%= link_to 'Edit', edit_location_path(location) %></td>
		<td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
<% else %>
	<h2 class="horizontal">No Locations to display</h2>
	<p>You have no locations to display. Get started by creating some locations!</p>
<% end %>
<br />

<div class="link_actions">
<%= link_to 'New Location', new_location_path %>
</div>