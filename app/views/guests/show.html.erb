<% title "Guest" %>

<p>
  <strong>Party:</strong>
  <%= @guest.party_id %>
</p>
<p>
  <strong>Name:</strong>
  <%= @guest.name %>
</p>
<p>
  <strong>Email:</strong>
  <%= @guest.email %>
</p>
<p>
  <strong>Invite Code:</strong>
  <%= @guest.invite_code %>
</p>
<p>
  <strong>Expected attendees:</strong>
  <%= @guest.expected_attendees %>
</p>
