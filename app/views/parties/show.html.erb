<% title "Party" %>
<%= image_tag "gmap.png",:size => "400x325", :alt => 'Map to Party' ,:class => "gmap_party"%>
<p>
  <strong>Name:</strong>
  <%= @party.name %>
</p>
<p>
  <strong>Party Type:</strong>
  <%= @party_type.name %>
</p>
<% if @party.location%>
	<p>
  		<strong>Location:</strong>
  		<%= @party.location.name %>
	</p>
	<p>
		<strong>Address:</strong>
		<%= @party.location%>
<% end %>
<p>
  <strong>Details:</strong>
  <%= @party.details %>
</p>
<p>
  <strong>Date:</strong>
  <%= @party.date %>
</p>
<p>
  <strong>Start Time:</strong>
  <%= time(@party.start_time) %>
</p>
<p>
  <strong>End Time:</strong>
  <%= time(@party.end_time) %>
</p>
<p>
  <strong>Rsvp Date:</strong>
  <%= @party.rsvp_date %>
</p>
<p>
  <strong>Public Party:</strong>
  <%= @party.public_party %>
</p>
<p>
  <strong>Public Guestlist:</strong>
  <%= @party.public_guestlist %>
</p>
<p>
  <%= link_to "Edit", edit_party_path(@party) %> |
  <%= link_to "Destroy", @party, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", parties_path %>
</p>
