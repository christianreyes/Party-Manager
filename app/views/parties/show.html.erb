  <%= image_tag "gmap.png",:size => "400x325", :alt => 'Map to Party'%> <br />
  <%= @party.location.address%>
</div>
<p>
  <strong>Name:</strong>
  <%= @party.name %>
</p>
<p>
  <strong>Party Type:</strong>
  <%= @party_type.name %>
</p>
<% if @party.location%>
	<p>
  		<strong>Location:</strong>
  		<%= @party.location.name %>
	</p>
<% end %>
<p>
  <strong>Details:</strong>
  <%= @party.details %>
</p>
<p>
  <strong>Date:</strong>
  <%= @party.date %>
</p>
<p>
  <strong>Start Time:</strong>
  <%= time(@party.start_time) %>
</p>
<p>
  <strong>End Time:</strong>
  <%= time(@party.end_time) %>
</p>
<p>
  <strong>Rsvp Date:</strong>
  <%= @party.rsvp_date %>
</p>
