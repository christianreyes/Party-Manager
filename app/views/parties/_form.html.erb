<%= semantic_form_for(@party) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :party_type, :as => :select, :collection => PartyType.find(:all) %>
    <%= f.input :details %>
    <%= f.input :date%>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :rsvp_date%>
    <%= f.input :public_party %>
    <%= f.input :public_guestlist %>
  <% end %>
  <%= f.buttons %>  
<% end %>