<%= semantic_form_for(@party) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :party_type, :as => :select, :collection => PartyType.all %>
    <%= f.input :location, :as => :select, :collection => current_user.locations %>
    <%= f.input :details , :input_html => {:rows => 7}%>
    <%= f.input :date, :as => :date_picker %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :rsvp_date, :as => :date_picker%>
    <%= f.input :public_party %>
    <%= f.input :public_guestlist %>
  <% end %>
  <%= f.buttons %>  
<% end %>